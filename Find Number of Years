public class HW1EthanWebster {
    public static void main(String[] args) {
    System.out.println();
    System.out.println("*****2.7 Find Number of Years*****");
    
    //Get number of minutes from user
    System.out.print("Enter the number of minutes: ");
    long minutes = input.nextLong();            //Using long in case user enters
                                                //large number 
    
    //Calculate years and days
    long years = ((minutes / 60) / 24) / 365;
    long days =  ((minutes / 60) / 24) % 365;
    
    //Print results
    System.out.println(minutes + " minutes is approximately " + years + " years"
            + " and " + days + " days");

